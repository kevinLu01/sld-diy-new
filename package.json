{
  "name": "sld-diy-new",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "frontend:dev": "npm --workspace frontend run dev",
    "frontend:build": "npm --workspace frontend run build",
    "frontend:preview": "npm --workspace frontend run preview",
    "frontend:lint": "npm --workspace frontend run lint",
    "backend:dev": "mvn -f backend/pom.xml spring-boot:run",
    "backend:test": "mvn -f backend/pom.xml test",
    "backend:build": "mvn -f backend/pom.xml -DskipTests package"
  }
}
